{% extends 'templates/app.twig' %}
{% block content %}
  <div class="container">
    <div class="row" style="padding: 25px">
    </div>
    <div class="row justify-content-md-center">
      <div class="col-lg-auto">
        {% if basket.itemCount %}
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Product</th>
                <th></th>
                <th></th>
                <th scope="col">Price</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for item in basket.all %}
                <tr>
                  <td><a href="{{ path_for('download.get', { slug: item.slug }) }}">{{ item.title }}</a></td>
                  <td></td>
                  <td></td>
                  <td>${{ item.price | number_format(2) }}</td>
                  <td>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
          <a href="{{ path_for('cart.clear') }}"><button class="btn btn-secondary float-right">Clear Cart</button></a>
          </div>
          <div class="col-md-auto">
          </div>
          <div class="col-md-auto">
          </div>
          <div class="col-md-auto">
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Cart Summary</th>
                  <th scope="col"></th>
                </tr>
              </thead>
                {% include 'cart/partials/summary.twig' %}
                <tr>
                  <td></td>
                  <td><a href="{{ path_for('order.index') }}"><button href="{{ path_for('order.index') }}" class="btn btn-success float-right">Checkout</button></a></td>
                </tr>
              </tbody>
            </table>
          </div>
          {% else %}
            <h4>No items in cart</h4>
          {% endif %}
    </div>
  </div>
{% endblock %}
